<div class="m-[17px]">
  <div
    class="p-4 bg-white block sm:flex items-center justify-between border-b border-gray-200 lg:mt-1.5 dark:bg-gray-800 dark:border-gray-700"
  >
    <div class="w-full mb-1">
      <div class="mb-4">
        <h1 class="text-xl font-semibold text-gray-900 sm:text-2xl dark:text-white">
          Admin Management
        </h1>
        <p class="text-sm text-gray-600 dark:text-gray-400">Manage your account information and security settings</p>
      </div>
    </div>
  </div>

  <% const fieldError=(fieldName)=> {
    const err = errors?.find(e => e.path === fieldName);
    return err ? err.msg : null;
  }; %>

  <div class="p-6 bg-white dark:bg-gray-800 min-h-screen">

  <!-- Profile Information Card -->
  <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg shadow-sm mb-6">
    <div class="p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-6">Profile Information</h2>
      
      <form action="/admin-management/update" method="POST" class="space-y-6">
        <input type="hidden" name="userId" value="<%= user._id %>">

        <!-- Name Field -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 items-start">
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 pt-2">
            Name <span class="text-red-500">*</span>
          </label>
          <div class="md:col-span-2">
            <input
              type="text"
              name="name"
              value="<%= user?.name || '' %>"
              class="w-full px-4 py-2.5 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
              placeholder="Enter your name"
            />
            <% if (fieldError('name')) { %>
              <p class="text-red-500 text-xs mt-1"><%= fieldError('name') %></p>
            <% } %>
          </div>
        </div>

        <div class="border-t border-gray-200 dark:border-gray-700"></div>

        <!-- Email Field -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 items-start">
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 pt-2">
            Email <span class="text-red-500">*</span>
          </label>
          <div class="md:col-span-2">
            <input
              type="email"
              name="email"
              value="<%= user?.email || '' %>"
              class="w-full px-4 py-2.5 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
              placeholder="Enter your email"
            />
            <% if (fieldError('email')) { %>
              <p class="text-red-500 text-xs mt-1"><%= fieldError('email') %></p>
            <% } %>
          </div>
        </div>

        <div class="border-t border-gray-200 dark:border-gray-700"></div>

        <!-- Role Field -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 items-start">
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 pt-2">
            Role <span class="text-red-500">*</span>
          </label>
          <div class="md:col-span-2">
            <input
              type="text"
              name="role"
              value="<%= user?.roles?.[0]?.name || '' %>"
              readonly
              class="w-full px-4 py-2.5 rounded-lg border border-gray-300 dark:border-gray-600 bg-gray-100 dark:bg-gray-800 text-gray-500 dark:text-gray-400 cursor-not-allowed"
            />
            <% if (fieldError('role')) { %>
              <p class="text-red-500 text-xs mt-1"><%= fieldError('role') %></p>
            <% } %>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex justify-end gap-3 pt-4">
          <button
            type="button"
            id="cancelBtn"
            class="px-6 py-2.5 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors"
          >
            Cancel
          </button>
          <button
            type="submit"
            id="sendBtn"
            class="px-6 py-2.5 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 dark:bg-blue-600 dark:hover:bg-blue-700 rounded-lg focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors shadow-sm"
          >
            Update Profile
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Password Change Card -->
  <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg shadow-sm">
    <div class="p-6">
      <div class="mb-6">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Password</h2>
        <p class="text-sm text-gray-600 dark:text-gray-400">Update your password securely. Your new password must be different from previously used passwords.</p>
      </div>

      <div class="border-t border-gray-200 dark:border-gray-700 pt-6">
        <form action="/admin-management/change-password" method="POST" class="max-w-md">
          <!-- Old Password -->
          <div class="mb-4">
            <label for="oldPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Current Password
            </label>
            <input
              type="password"
              name="oldPassword"
              id="oldPassword"
              class="w-full px-4 py-2.5 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
              placeholder="Enter current password"
            />
          </div>

          <!-- New Password -->
          <div class="mb-4">
            <label for="newPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              New Password
            </label>
            <input
              type="password"
              name="newPassword"
              id="newPassword"
              class="w-full px-4 py-2.5 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
              placeholder="Enter new password"
            />
          </div>

          <!-- Password Requirements -->
          <div class="mb-6 space-y-2 text-sm text-gray-600 dark:text-gray-400">
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span>Must be at least 8 characters</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span>Must contain one special character</span>
            </div>
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full px-6 py-2.5 text-sm font-medium text-white bg-red-600 hover:bg-red-700 dark:bg-red-600 dark:hover:bg-red-700 rounded-lg focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors shadow-sm"
          >
            Change Password
          </button>
        </form>
      </div>
    </div>
  </div>
  </div>
</div>
