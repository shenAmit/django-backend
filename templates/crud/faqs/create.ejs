<div class="m-[17px]">
  <div
    class="p-4 bg-white block sm:flex items-center justify-between border-b border-gray-200 lg:mt-1.5 dark:bg-gray-800 dark:border-gray-700"
  >
    <div class="w-full mb-1">
      <div class="mb-4">
        <h1
          class="text-xl font-semibold text-gray-900 sm:text-2xl dark:text-white"
        >
          <%= oldData?.id ? 'Edit Faq' : 'Add Faq' %>
        </h1>
      </div>
    </div>
  </div>
  <div class="flex flex-col">
    <div class="overflow-x-auto">
      <div class="inline-block min-w-full align-middle">
        <div class="overflow-hidden shadow">
          <div class="p-6 space-y-6 5 dark:bg-gray-800">
            <% const fieldError = (fieldName) => { const err = errors?.find(e =>
            e.path === fieldName); return err ? err.msg : null; }; %>
            <form
              action="/save-faq"
              method="POST"
              enctype="multipart/form-data"
            >
              <% if (oldData?.id) { %>
              <input type="hidden" name="_method" value="PUT" />
              <input type="hidden" name="id" value="<%= oldData.id %>" />
              <% } %>

              <!-- <div class="grid grid-cols-6 gap-6">
              </div> -->
              <div class="col-span-12 sm:col-span-3">
                <label
                  for="question"
                  class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
                >
                  Question
                  <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  name="question"
                  id="question"
                  class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                  placeholder="Type Question"
                  required
                  value="<%= oldData?.question || '' %>"
                />
                <% if (fieldError('question')) { %>
                <p class="text-red-500 text-xs mt-1">
                  <%= fieldError('question') %>
                </p>
                <% } %>
              </div>
              <div class="col-span-12 sm:col-span-3 pt-4">
                <label
                  for="answer"
                  class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
                >
                  Answer
                </label>

                <div
                  id="editor"
                  class="min-h-[300px] shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-800 dark:border-gray-600 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                >
                  <!-- Optional initial value -->
                  <%- oldData?.answer || '' %>
                </div>

                <!-- Hidden input to hold CKEditor data -->
                <input type="hidden" name="answer" id="editor_content" />

                <% if (fieldError('answer')) { %>
                <p class="text-red-500 text-xs mt-1">
                  <%= fieldError('answer') %>
                </p>
                <% } %>
              </div>

              <div class="grid grid-cols-6 gap-6 mt-6">
                <div class="col-span-6 sm:col-span-3">
                  <label
                    for="status"
                    class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
                  >
                    Status
                  </label>
                  <select
                    id="status"
                    name="status"
                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                    required
                  >
                    <option value="true" <%= oldData?.status == 1 ? 'selected' : '' %>>Active</option>
                    <option value="false" <%= oldData?.status == 0 ? 'selected' : '' %>>Inactive</option>
                  </select>
                </div>
              </div>

              <div
                  class="items-center pt-6 mt-6 border-t border-gray-200 rounded-b dark:border-gray-700 flex justify-end gap-2">
                  <a href="/faqs"
                      class="text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-red-500 dark:hover:bg-red-300 dark:focus:ring-red-800">
                    Go Back
                  </a>
                <button
                  class="text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
                  type="submit"
                >
                  <%= oldData?.id ? 'Update' : 'Submit' %>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
