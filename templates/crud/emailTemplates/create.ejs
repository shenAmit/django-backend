<!-- Quill CDN CSS -->
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet" />
<!-- Quill JS -->
<script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>

<div class="main-content bg-white dark:bg-gray-800 p-5">
  <div>
    <h1 class="font-semibold text-2xl text-[#181D27] dark:text-white">
      Email Templates
    </h1>
  </div>
  <div
    style="display: none"
    id="required_field"
    class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400"
    role="alert"
  >
    <span class="font-medium">Please fill required field !</span>
  </div>
  <div
    style="display: none"
    id="success_msg"
    class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400"
    role="alert"
  >
    <span class="font-medium"></span>
  </div>
  <div class="border border-gray-200 dark:border-gray-700 mb-4 mt-4"></div>
  <form action="/email-template/save" method="post">
    <input type="hidden" name="_id" value="<%= oldData?.['_id'] || '' %>" />
    <!-- First row: From Name & From Email -->
    <div
      class="input-group"
      style="
        display: flex;
        gap: 2%;
        align-items: flex-start;
        margin-bottom: 20px;
      "
    >
      <div style="width: 48%">
        <label for="from_name" class="dark:text-white block mb-1"
          >From Name 
          <span class="text-red-500">*</span>
          </label
        >
        <input
          type="text"
          class="rounded-lg border border-gray-300 dark:border-gray-700 shadow-sm font-normal text-base outline-none bg-white dark:bg-gray-900 text-[#181D27] dark:text-white w-full"
          style="width: 100%"
          id="from_name"
          name="from_name"
          placeholder="Sender Name"
          required
          value="<%= oldData?.['from_name'] || '' %>"
        />
      </div>
      <div style="width: 48%">
        <label for="from_email" class="dark:text-white block mb-1"
          >From Email 
          <span class="text-red-500">*</span>
          </label
        >
        <input
          type="email"
          class="rounded-lg border border-gray-300 dark:border-gray-700 shadow-sm font-normal text-base outline-none bg-white dark:bg-gray-900 text-[#181D27] dark:text-white w-full"
          style="width: 100%"
          id="from_email"
          name="from_email"
          placeholder="sender@email.com"
          required
          value="<%= oldData?.['from_email'] || '' %>"
        />
      </div>
    </div>

    <!-- Second row: Category & Subject -->
    <div
      class="input-group"
      style="
        display: flex;
        gap: 2%;
        align-items: flex-start;
        margin-bottom: 20px;
      "
    >
      <div style="width: 48%">
        <label for="email_category" class="dark:text-white block mb-1"
          >Category 
          <span class="text-red-500">*</span>
          </label
        >
        <input
          type="text"
          class="rounded-lg border border-gray-300 dark:border-gray-700 shadow-sm font-normal text-base outline-none bg-white dark:bg-gray-900 text-[#181D27] dark:text-white w-full"
          style="width: 100%"
          id="email_category"
          name="email_category"
          placeholder="Category"
          value="<%= oldData?.['email_category'] || '' %>"
          required
        />
      </div>
      <div style="width: 48%">
        <label for="email_subject" class="dark:text-white block mb-1"
          >Subject 
          <span class="text-red-500">*</span>
          </label
        >
        <input
          type="text"
          class="rounded-lg border border-gray-300 dark:border-gray-700 shadow-sm font-normal text-base outline-none bg-white dark:bg-gray-900 text-[#181D27] dark:text-white w-full"
          style="width: 100%"
          id="email_subject"
          name="email_subject"
          placeholder="Email Subject"
          value="<%= oldData?.['email_subject'] || '' %>"
          required
        />
      </div>
    </div>

    <div class="border border-gray-200 dark:border-gray-700 mb-5"></div>

    <!-- Full row: Editor -->
    <div class="col-span-12 sm:col-span-3 ">
      <label
        for="answer"
        class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
      >
        Email Content
      </label>

      <div
        id="editor"
        class="min-h-[300px] shadow-sm bg-white border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-800 dark:border-gray-600 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
      >
        <!-- Optional initial value -->
        <%- oldData?.email_content || '' %>
      </div>
      <!-- Hidden input to hold CKEditor data -->
      <input type="hidden" name="email_content" id="editor_content" />
    </div>
       <div class="grid grid-cols-6 gap-6 mt-6 mb-6">
                <div class="col-span-6 sm:col-span-3">
                  <label
                    for="status"
                    class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
                  >
                    Status
                  </label>
                  <select
                    id="status"
                    name="status"
                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                    required
                  >
                    <option value="true" <%= oldData?.status == 1 ? 'selected' : '' %>>Active</option>
                    <option value="false" <%= oldData?.status == 0 ? 'selected' : '' %>>Inactive</option>
                  </select>
                </div>
              </div>

    <div class="border border-gray-200 dark:border-gray-700 mb-5"></div>
    <div class="btn-div">
      <button
        class="cancel-btn px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-700 shadow-sm text-sm font-semibold text-[#414651] dark:text-white bg-white dark:bg-gray-800"
        id="cancelBtn"
      >
        Cancel
      </button>
      <button type="submit" class="send-btn">Save</button>
    </div>
  </form>
</div>
