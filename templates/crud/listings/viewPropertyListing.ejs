<div class="m-[17px]">
  <div
    class="p-4 bg-white border-b border-gray-200 dark:bg-gray-800 dark:border-gray-700"
  >
    <div class="mb-4 flex items-center justify-between">
      <h1 class="text-xl font-semibold text-gray-900 dark:text-white">
        <%= pageTitle %>
      </h1>
      <a
        href="/listings/properties"
        class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-gray-600"
      >
        <svg
          class="w-4 h-4 mr-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"
          ></path>
        </svg>
        Back to Listings
      </a>
    </div>
  </div>

  <div class="p-6 bg-gray-50 dark:bg-gray-900">
    <!-- Property Images Slider -->
    <% if (listing.media && listing.media.images && listing.media.images.length
    > 0) { %>
    <div class="mb-8">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
        Property Images
      </h2>

      <div class="relative">
        <!-- Slider Container -->
        <div class="overflow-hidden relative">
          <div
            id="imageSlider"
            class="flex transition-transform duration-500 ease-in-out"
          >
            <% listing.media.images.forEach((image, index) => { %>
            <div class="flex-shrink-0 w-full md:w-1/2 lg:w-1/3 px-2">
              <img
                src="<%= image %>"
                alt="Property Image <%= index + 1 %>"
                class="w-full h-64 object-cover rounded-lg shadow-md"
              />
            </div>
            <% }); %>
          </div>
        </div>

        <!-- Navigation Buttons -->
        <% if (listing.media.images.length > 1) { %>
        <button
          id="prevBtn"
          onclick="slideImages('prev')"
          class="absolute left-0 top-1/2 -translate-y-1/2 bg-white dark:bg-gray-800 text-gray-800 dark:text-white p-3 rounded-full shadow-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-all z-10 ml-2"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"
            ></path>
          </svg>
        </button>
        <button
          id="nextBtn"
          onclick="slideImages('next')"
          class="absolute right-0 top-1/2 -translate-y-1/2 bg-white dark:bg-gray-800 text-gray-800 dark:text-white p-3 rounded-full shadow-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-all z-10 mr-2"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"
            ></path>
          </svg>
        </button>
        <% } %>

        <!-- Dots Indicator -->
        <% if (listing.media.images.length > 1) { %>
        <div class="flex justify-center mt-4 gap-2">
          <% const totalSlides = Math.ceil(listing.media.images.length / 3); %>
          <% for(let i = 0; i < totalSlides; i++) { %>
          <button
            class="slide-dot w-3 h-3 rounded-full transition-all <%= i === 0 ? 'bg-blue-600 w-8' : 'bg-gray-300 dark:bg-gray-600' %>"
            data-slide="<%= i %>"
          ></button>
          <% } %>
        </div>
        <% } %>
      </div>
    </div>
    <% } %>

    <div class="flex newclass gap-6 items-start">
      <!-- Property Details -->
      <div class="space-y-6 flex flex-col">
        <div
          class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden"
        >
          <div
            class="bg-gray-100 dark:bg-gray-700 p-4 border-b border-gray-200 dark:border-gray-600"
          >
            <h3
              class="text-lg font-semibold text-gray-900 dark:text-white flex items-center"
            >
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                ></path>
              </svg>
              Property Details
            </h3>
          </div>
          <div class="p-6 space-y-4">
            <div
              class="flex items-center justify-between pb-3 border-b border-gray-200 dark:border-gray-700"
            >
              <span class="text-sm font-medium text-gray-600 dark:text-gray-400"
                >Title</span
              >
              <span class="text-sm font-semibold text-gray-900 dark:text-white"
                ><%= listing.title || 'N/A' %></span
              >
            </div>
            <div
              class="flex items-center justify-between pb-3 border-b border-gray-200 dark:border-gray-700"
            >
              <span class="text-sm font-medium text-gray-600 dark:text-gray-400"
                >Property Type</span
              >
              <span
                class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200"
              >
                <%= listing.propertyType || 'N/A' %>
              </span>
            </div>
            <div
              class="flex items-center justify-between pb-3 border-b border-gray-200 dark:border-gray-700"
            >
              <span class="text-sm font-medium text-gray-600 dark:text-gray-400"
                >Zoning Type</span
              >
              <span
                class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-indigo-100 text-indigo-800 dark:bg-indigo-900 dark:text-indigo-200"
              >
                <%= listing.zoningType || 'N/A' %>
              </span>
            </div>
            <% if (listing.sqft_area) { %>
            <div
              class="flex items-center justify-between pb-3 border-b border-gray-200 dark:border-gray-700"
            >
              <span class="text-sm font-medium text-gray-600 dark:text-gray-400"
                >Area</span
              >
              <span class="text-sm font-semibold text-gray-900 dark:text-white"
                ><%= listing.sqft_area %> sqft</span
              >
            </div>
            <% } %> <% if (listing.plotNo) { %>
            <div
              class="flex items-center justify-between pb-3 border-b border-gray-200 dark:border-gray-700"
            >
              <span class="text-sm font-medium text-gray-600 dark:text-gray-400"
                >Plot No</span
              >
              <span class="text-sm font-semibold text-gray-900 dark:text-white"
                ><%= listing.plotNo %></span
              >
            </div>
            <% } %>
            <div
              class="flex items-center justify-between pb-3 border-b border-gray-200 dark:border-gray-700"
            >
              <span class="text-sm font-medium text-gray-600 dark:text-gray-400"
                >Status</span
