<div class="m-[17px]">
  <div
    class="p-4 bg-white border-b border-gray-200 dark:bg-gray-800 dark:border-gray-700"
  >
    <div class="mb-4 flex items-center justify-between">
      <h1 class="text-xl font-semibold text-gray-900 dark:text-white">
        <%= pageTitle %>
      </h1>
      <a
        href="/listings/chairs"
        class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-gray-600"
      >
        <svg
          class="w-4 h-4 mr-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"
          ></path>
        </svg>
        Back to Listings
      </a>
    </div>
  </div>

  <div class="p-6 bg-gray-50 dark:bg-gray-900">
    <!-- Cover Images Slider -->
    <% if (listing.coverImages && listing.coverImages.length > 0) { %>
    <div class="mb-8">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
        Cover Images
      </h2>

      <div class="relative">
        <!-- Slider Container -->
        <div class="overflow-hidden relative">
          <div
            id="imageSlider"
            class="flex transition-transform duration-500 ease-in-out"
          >
            <% listing.coverImages.forEach((image, index) => { %>
            <div class="flex-shrink-0 w-full md:w-1/2 lg:w-1/3 px-2">
              <img
                src="<%= image %>"
                alt="Cover Image <%= index + 1 %>"
                class="w-full h-64 object-cover rounded-lg shadow-md"
              />
            </div>
            <% }); %>
          </div>
        </div>

        <!-- Navigation Buttons -->
        <% if (listing.coverImages.length > 1) { %>
        <button
          id="prevBtn"
          onclick="slideImages('prev')"
          class="absolute left-0 top-1/2 -translate-y-1/2 bg-white dark:bg-gray-800 text-gray-800 dark:text-white p-3 rounded-full shadow-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-all z-10 ml-2"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"
            ></path>
          </svg>
        </button>
        <button
          id="nextBtn"
          onclick="slideImages('next')"
          class="absolute right-0 top-1/2 -translate-y-1/2 bg-white dark:bg-gray-800 text-gray-800 dark:text-white p-3 rounded-full shadow-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-all z-10 mr-2"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"
            ></path>
          </svg>
        </button>
        <% } %>

        <!-- Dots Indicator -->
        <% if (listing.coverImages.length > 1) { %>
        <div class="flex justify-center mt-4 gap-2">
          <% const totalSlides = Math.ceil(listing.coverImages.length / 3); %>
          <% for(let i = 0; i < totalSlides; i++) { %>
          <button
            onclick="goToSlide(<%= i %>)"
            class="slide-dot w-3 h-3 rounded-full transition-all <%= i === 0 ? 'bg-blue-600 w-8' : 'bg-gray-300 dark:bg-gray-600' %>"
            data-slide="<%= i %>"
          ></button>
          <% } %>
        </div>
        <% } %>
      </div>
    </div>
    <% } %>

    <div class="w-full gap-6 mb-4">
      <div class="w-full flex newclass justify-between">
        <div
          class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden md:w-[48%]"
        >
          <div
            class="bg-gray-100 dark:bg-gray-700 p-4 border-b border-gray-200 dark:border-gray-600"
          >
            <h3
              class="text-lg font-semibold text-gray-900 dark:text-white flex items-center"
            >
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
              Basic Information
            </h3>
          </div>
          <div class="p-6 space-y-4">
            <div
              class="flex items-center justify-between pb-3 border-b border-gray-200 dark:border-gray-700"
            >
              <span class="text-sm font-medium text-gray-600 dark:text-gray-400"
                >Chair Name</span
              >
              <span class="text-sm font-semibold text-gray-900 dark:text-white"
                ><%= listing.chairName || 'N/A' %></span
              >
            </div>
            <div
              class="flex items-center justify-between pb-3 border-b border-gray-200 dark:border-gray-700"
            >
              <span class="text-sm font-medium text-gray-600 dark:text-gray-400"
                >Available Chairs</span
              >
              <span
                class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200"
              >
                <%= listing.availableChairs || 0 %> Chairs
              </span>
            </div>
            <div
              class="flex items-center justify-between pb-3 border-b border-gray-200 dark:border-gray-700"
            >
              <span class="text-sm font-medium text-gray-600 dark:text-gray-400"
                >Status</span
              >
              <% if (listing.status === 'active') { %>
              <span
                class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800 ring-2 ring-green-600/20"
                >Active</span
              >
              <% } else if (listing.status === 'completed') { %>
              <span
                class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-blue-100 text-blue-800 ring-2 ring-blue-600/20"
                >Completed</span
              >
              <% } else { %>
              <span
                class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-gray-100 text-gray-800 ring-2 ring-gray-600/20"
                ><%= listing.status || 'Inactive' %></span
              >
              <% } %>
            </div>
            <div class="pt-2">
              <span
                class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-2"
                >Description</span
              >
              <p
                class="text-sm text-gray-900 dark:text-white leading-relaxed bg-gray-50 dark:bg-gray-700 p-3 rounded-lg"
              >
                <%= listing.description || 'No description provided' %>
              </p>
            </div>
          </div>
        </div>

        <div
          class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden md:w-[48%] md:w-[48%]"
        >
          <div
            class="bg-gray-100 dark:bg-gray-700 p-4 border-b border-gray-200 dark:border-gray-600"
          >
            <h3
              class="text-lg font-semibold text-gray-900 dark:text-white flex items-center"
            >
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
              Payment Details
            </h3>
          </div>
          <% if (listing.paymentDetails) { %>
          <div class="p-6 space-y-4">
            <div
              class="flex items-center justify-between pb-3 border-b border-gray-200 dark:border-gray-700"
            >
              <span class="text-sm font-medium text-gray-600 dark:text-gray-400"
                >Amount</span
              >
              <span
                class="text-2xl font-bold text-green-600 dark:text-green-400"
                >$<%= listing.paymentDetails.amount || 0 %></span
              >
            </div>
            <div
              class="flex items-center justify-between pb-3 border-b border-gray-200 dark:border-gray-700"
            >
              <span class="text-sm font-medium text-gray-600 dark:text-gray-400"
                >Billing Unit</span
              >
              <span
                class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200"
              >
                <%= listing.paymentDetails.unit || 'N/A' %>
              </span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-gray-600 dark:text-gray-400"
                >Payment Model</span
              >
              <span
                class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-indigo-100 text-indigo-800 dark:bg-indigo-900 dark:text-indigo-200"
              >
                <%= listing.paymentDetails.model || 'N/A' %>
              </span>
            </div>
          </div>
          <% } else { %>
          <div class="p-6">
            <p class="text-sm text-gray-500 dark:text-gray-400 text-center">
              No payment details available
            </p>
          </div>
          <% } %>
        </div>
      </div>
    </div>
    <div class="w-full gap-6 mb-4">
      <div class="w-full flex newclass justify-between">
        <!-- Shop Information -->
        <div
          class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden md:w-[48%]"
        >
          <div
            class="bg-gray-100 dark:bg-gray-700 p-4 border-b border-gray-200 dark:border-gray-600"
          >
            <h3
              class="text-lg font-semibold text-gray-900 dark:text-white flex items-center"
            >
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                ></path>
              </svg>
              Shop Information
            </h3>
          </div>
          <% if (listing.shopId) { %>
          <div class="p-6 space-y-4">
            <% if (listing.shopId.profilePicture) { %>
            <div class="flex justify-center mb-4">
              <img
                src="<%= listing.shopId.profilePicture %>"
                alt="Shop"
                class="w-24 h-24 rounded-full object-cover border-4 border-purple-100 dark:border-purple-900 shadow-lg"
              />
            </div>
            <% } %>
            <div
              class="flex items-center justify-between pb-3 border-b border-gray-200 dark:border-gray-700"
            >
              <span class="text-sm font-medium text-gray-600 dark:text-gray-400"
                >Shop Name</span
              >
              <span class="text-sm font-semibold text-gray-900 dark:text-white"
                ><%= listing.shopId.shop_details?.shopname ||
                listing.shopId.name || 'N/A' %></span
              >
            </div>
            <div
              class="flex items-center justify-between pb-3 border-b border-gray-200 dark:border-gray-700"
            >
              <span class="text-sm font-medium text-gray-600 dark:text-gray-400"
                >Email</span
              >
              <span class="text-sm text-gray-900 dark:text-white"
                ><%= listing.shopId.email || 'N/A' %></span
              >
            </div>
            <div
              class="flex items-center justify-between pb-3 border-b border-gray-200 dark:border-gray-700"
            >
              <span class="text-sm font-medium text-gray-600 dark:text-gray-400"
                >Phone</span
              >
              <span class="text-sm text-gray-900 dark:text-white"
                ><%= listing.shopId.phone || 'N/A' %></span
              >
            </div>
            <% if (listing.shopId.shop_address) { %>
            <div class="pt-2">
              <span
                class="block text-sm font-medium text-gray-600 dark:text-gray-400 mb-2"
                >Address</span
              >
              <p
                class="text-sm text-gray-900 dark:text-white bg-gray-50 dark:bg-gray-700 p-3 rounded-lg"
              >
                <%= listing.shopId.shop_address.address || 'N/A' %>
              </p>
            </div>
            <% } %>
          </div>
          <% } else { %>
          <div class="p-6">
            <p class="text-sm text-gray-500 dark:text-gray-400 text-center">
              Shop information not available
            </p>
          </div>
          <% } %>
        </div>

        <!-- Availability -->
        <div
          class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden md:w-[48%]"
        >
          <div
            class="bg-gray-100 dark:bg-gray-700 p-4 border-b border-gray-200 dark:border-gray-600"
          >
            <h3
              class="text-lg font-semibold text-gray-900 dark:text-white flex items-center"
            >
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                ></path>
              </svg>
              Availability Period
            </h3>
          </div>
          <% if (listing.availability) { %>
          <div class="p-6 space-y-4">
            <div
              class="flex items-center justify-between pb-3 border-b border-gray-200 dark:border-gray-700"
            >
              <span class="text-sm font-medium text-gray-600 dark:text-gray-400"
                >Start Date</span
              >
              <span class="text-sm font-semibold text-gray-900 dark:text-white">
                <%= new
                Date(listing.availability.startDate).toLocaleDateString('en-US',
                { year: 'numeric', month: 'short', day: 'numeric' }) %>
              </span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-gray-600 dark:text-gray-400"
                >End Date</span
              >
              <span class="text-sm font-semibold text-gray-900 dark:text-white">
                <%= new
                Date(listing.availability.endDate).toLocaleDateString('en-US', {
                year: 'numeric', month: 'short', day: 'numeric' }) %>
              </span>
            </div>
          </div>
          <% } else { %>
          <div class="p-6">
            <p class="text-sm text-gray-500 dark:text-gray-400 text-center">
              Availability not set
            </p>
          </div>
          <% } %>
        </div>
      </div>
    </div>
    <div class="w-full gap-6 mb-4">
      <div class="w-full flex newclass justify-between">
        <!-- Amenities -->
        <% if (listing.amenities && listing.amenities.length > 0) { %>
        <div
          class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden md:w-[48%]"
        >
          <div
            class="bg-gray-100 dark:bg-gray-700 p-4 border-b border-gray-200 dark:border-gray-600"
          >
            <h3
              class="text-lg font-semibold text-gray-900 dark:text-white flex items-center"
            >
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
                ></path>
              </svg>
              Amenities
            </h3>
          </div>
          <div class="p-6">
            <div class="flex flex-wrap gap-2">
              <% listing.amenities.forEach(amenity => { %>
              <span
                class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-semibold bg-teal-50 text-teal-700 ring-1 ring-inset ring-teal-600/20 dark:bg-teal-900/30 dark:text-teal-300"
              >
                <%= amenity %>
              </span>
              <% }); %>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-8 flex gap-4">
      <a
        href="/listings/chairs/edit/<%= listing._id %>"
        class="inline-flex items-center px-6 py-3 text-sm font-semibold text-white bg-gradient-to-r from-blue-600 to-blue-700 rounded-lg hover:from-blue-700 hover:to-blue-800 shadow-md hover:shadow-lg transition-all duration-200"
      >
        <svg
          class="w-5 h-5 mr-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
          ></path>
        </svg>
        Edit Listing
      </a>
      <a
        href="/listings/chairs"
        class="inline-flex items-center px-6 py-3 text-sm font-semibold text-gray-700 bg-white border-2 border-gray-300 rounded-lg hover:bg-gray-50 dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-gray-700 transition-all duration-200"
      >
        Back to Listings
      </a>
    </div>
  </div>
</div>

<script>
  let currentSlide = 0;
  const totalImages = <%= listing.coverImages ? listing.coverImages.length : 0 %>;

  function getImagesPerSlide() {
    if (window.innerWidth >= 1024) return 3;
    if (window.innerWidth >= 768) return 2;
    return 1;
  }

  function getTotalSlides() {
    return Math.ceil(totalImages / getImagesPerSlide());
  }

  function slideImages(direction) {
    const slider = document.getElementById('imageSlider');
    if (!slider) return;

    const totalSlides = getTotalSlides();

    if (direction === 'next') {
      currentSlide = (currentSlide + 1) % totalSlides;
    } else {
      currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
    }

    updateSlider();
  }

  function goToSlide(slideIndex) {
    currentSlide = slideIndex;
    updateSlider();
  }

  function updateSlider() {
    const slider = document.getElementById('imageSlider');
    if (!slider) return;

    const imagesPerSlide = getImagesPerSlide();
    const slidePercentage = currentSlide * (100 / imagesPerSlide);
    slider.style.transform = `translateX(-${slidePercentage}%)`;

    // Update dots
    document.querySelectorAll('.slide-dot').forEach((dot, index) => {
      if (index === currentSlide) {
        dot.classList.remove('bg-gray-300', 'dark:bg-gray-600', 'w-3');
        dot.classList.add('bg-blue-600', 'w-8');
      } else {
        dot.classList.remove('bg-blue-600', 'w-8');
        dot.classList.add('bg-gray-300', 'dark:bg-gray-600', 'w-3');
      }
    });
  }

  // Dot navigation
  document.addEventListener('click', function(e) {
    if (e.target.classList.contains('slide-dot')) {
      const slideIndex = parseInt(e.target.getAttribute('data-slide'));
      goToSlide(slideIndex);
    }
  });

  // Keyboard navigation
  document.addEventListener('keydown', function(e) {
    if (e.key === 'ArrowLeft') {
      slideImages('prev');
    } else if (e.key === 'ArrowRight') {
      slideImages('next');
    }
  });

  // Reset slide on window resize
  let resizeTimer;
  window.addEventListener('resize', function() {
    clearTimeout(resizeTimer);
    resizeTimer = setTimeout(function() {
      currentSlide = 0;
      updateSlider();
    }, 250);
  });

  // Auto-play (optional - uncomment to enable)
  // setInterval(() => {
  //   slideImages('next');
  // }, 5000);
</script>
