<div class="m-[17px]">
  <div
    class="p-4 bg-white block sm:flex items-center justify-between border-b border-gray-200 lg:mt-1.5 dark:bg-gray-800 dark:border-gray-700"
  >
    <div class="w-full mb-1">
      <div class="mb-4">
        <h1
          class="text-xl font-semibold text-gray-900 sm:text-2xl dark:text-white"
        >
          <%= pageTitle %>
        </h1>
      </div>
      <div class="sm:flex">
        <div
          class="items-center hidden mb-3 sm:flex sm:divide-x sm:divide-gray-100 sm:mb-0 dark:divide-gray-700"
        >
          <form class="lg:pr-3" method="GET">
            <label for="property-search" class="sr-only">Search</label>
            <div class="relative mt-1 lg:w-64 xl:w-96 flex gap-4">
              <input
                type="text"
                name="search"
                id="search"
                class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                placeholder="Search by title or owner"
                value="<%= search || '' %>"
              />
              <select
                name="status"
                class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
              >
                <option value="all" <%= (status === 'all' || !status) ? 'selected' : '' %>>All Status</option>
                <option value="active" <%= status === 'active' ? 'selected' : '' %>>Active</option>
                <option value="inactive" <%= status === 'inactive' ? 'selected' : '' %>>Inactive</option>
              </select>
              <select
                name="propertyType"
                class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
              >
                <option value="all" <%= (propertyType === 'all' || !propertyType) ? 'selected' : '' %>>All Types</option>
                <option value="Real Estate" <%= propertyType === 'Real Estate' ? 'selected' : '' %>>Real Estate</option>
                <option value="Private Suite" <%= propertyType === 'Private Suite' ? 'selected' : '' %>>Private Suite</option>
              </select>
              <button
                class="text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700"
                type="submit"
              >
                Search
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="flex flex-col">
    <div class="overflow-x-auto">
      <div class="inline-block min-w-full align-middle">
        <div class="overflow-hidden shadow">
          <table
            class="min-w-full divide-y divide-gray-200 table-fixed dark:divide-gray-600"
          >
            <thead class="bg-gray-100 dark:bg-gray-700">
              <tr>
                <th class="p-4 whitespace-nowrap text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400">
                  S No.
                </th>
                <th class="p-4 text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400">
                  Image
                </th>
                <th class="p-4 text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400">
                  Title
                </th>
                <th class="p-4 text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400">
                  Owner
                </th>
                <th class="p-4 text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400">
                  Property Type
                </th>
                <th class="p-4 text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400">
                  Price
                </th>
                <th class="p-4 text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400">
                  Status
                </th>
                <th class="p-4 text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400">
                  Posted Date
                </th>
                <th class="p-4 text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200 dark:bg-gray-800 dark:divide-gray-700">
              <% if (listings.length === 0) { %>
              <tr>
                <td colspan="9" class="p-4 text-center text-gray-500 dark:text-gray-400">
                  No property listings found.
                </td>
              </tr>
              <% } else { %> 
              <% for (let i = 0; i < listings.length; i++) { %> 
              <% const listing = listings[i]; %>
              <tr class="hover:bg-gray-100 dark:hover:bg-gray-700">
                <td class="p-4 text-sm text-gray-900 dark:text-white">
                  <%= ((pagination.perPage * (pagination.currentPage - 1)) + i + 1) %>
                </td>
                <td class="p-4">
                  <% if (listing.media && listing.media.images && listing.media.images.length > 0) { %>
                    <img
                      class="w-16 h-16 rounded object-cover"
                      src="<%= listing.media.images[0] %>"
                      alt="<%= listing.title %>"
                      onerror="this.onerror=null; this.src='data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iNjQiIGhlaWdodD0iNjQiIHZpZXdCb3g9IjAgMCA2NCA2NCIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHJlY3Qgd2lkdGg9IjY0IiBoZWlnaHQ9IjY0IiBmaWxsPSIjRjNGNEY2Ii8+Cjwvc3ZnPgo=';"
                    />
                  <% } else { %>
                    <div class="w-16 h-16 rounded bg-gray-300 flex items-center justify-center">
                      <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                      </svg>
                    </div>
                  <% } %>
                </td>
                <td class="p-4 text-sm text-gray-900 dark:text-white">
                  <%= listing.title || 'N/A' %>
                </td>
                <td class="p-4 text-sm text-gray-900 dark:text-white">
                  <%= listing.owner?.name || 'N/A' %>
                </td>
                <td class="p-4 text-sm text-gray-900 dark:text-white">
                  <div class="flex flex-col">
                    <span><%= listing.propertyType || 'N/A' %></span>
                    <span class="text-xs text-gray-500"><%= listing.zoningType || 'N/A' %></span>
                  </div>
                </td>
                <td class="p-4 text-sm text-gray-900 dark:text-white">
                  <% if (listing.pricing) { %>
                    <div class="flex flex-col">
                      <span class="font-medium">$<%= listing.pricing.amount?.toLocaleString() || 0 %></span>
                      <span class="text-xs text-gray-500"><%= listing.pricing.model || 'N/A' %></span>
                      <% if (listing.pricing.rentFrequency) { %>
                        <span class="text-xs text-gray-500"><%= listing.pricing.rentFrequency %></span>
                      <% } %>
                    </div>
                  <% } else { %>
                    N/A
                  <% } %>
                </td>
                <td class="p-4 text-sm">
                  <% if (listing.status === 'active') { %>
                    <span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">
                      Active
                    </span>
                  <% } else { %>
                    <span class="inline-flex items-center rounded-md bg-gray-50 px-2 py-1 text-xs font-medium text-gray-700 ring-1 ring-inset ring-gray-600/20">
                      <%= listing.status || 'Inactive' %>
                    </span>
                  <% } %>
                </td>
                <td class="p-4 text-sm text-gray-900 dark:text-white">
                  <%= listing.createdAt.toLocaleDateString('en-US', { year: 'numeric', month: '2-digit', day: '2-digit' }) %>
                </td>
                <td class="p-4">
                  <div class="flex items-center space-x-2">
                    <a
                      href="/listings/properties/view/<%= listing._id %>"
                      class="text-purple-600 hover:text-purple-900 dark:text-purple-400 dark:hover:text-purple-300"
                      title="View Listing"
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                      </svg>
                    </a>
                    <!-- <a
                      href="/listings/properties/edit/<%= listing._id %>"
                      class="text-blue-600 hover:text-blue-900 dark:text-blue-400 dark:hover:text-blue-300"
                      title="Edit Listing"
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                      </svg>
                    </a> -->
                    <button
                      type="button"
                      class="delete-listing-btn text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300"
                      data-id="<%= listing._id %>"
                      data-name="<%= listing.title %>"
                      title="Delete Listing"
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                      </svg>
                    </button>
                  </div>
                </td>
              </tr>
              <% } %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <%- include('../components/pagination', { pagination, search, query, queryString }) %>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteListingModal" class="fixed inset-0 z-50 hidden overflow-y-auto">
  <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:block sm:p-0">
    <div class="fixed inset-0 transition-all duration-300 bg-gray-500 bg-opacity-75 backdrop-blur-sm modal-backdrop"></div>
    <div class="inline-block w-full max-w-md p-6 my-8 overflow-hidden text-left align-middle transition-all transform bg-white shadow-xl rounded-lg dark:bg-gray-800 modal-content">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-medium text-gray-900 dark:text-white">Delete Listing</h3>
        <button type="button" class="modal-close text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div class="mb-6">
        <p class="text-sm text-gray-600 dark:text-gray-300">
          Are you sure you want to delete the property "<span id="deleteListingName" class="font-medium"></span>"? This action cannot be undone.
        </p>
      </div>
      <div class="flex justify-end space-x-3">
        <button type="button" class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-200 rounded-lg hover:bg-gray-300 modal-close">
          Cancel
        </button>
        <button type="button" id="confirmDeleteListing" class="px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-lg hover:bg-red-700 disabled:opacity-50 disabled:cursor-not-allowed">
          <span class="delete-btn-text">Delete</span>
          <span class="delete-btn-loader hidden inline-flex items-center">
            <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            Deleting...
          </span>
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  const deleteListingModal = document.getElementById("deleteListingModal");
  const deleteListingButtons = document.querySelectorAll(".delete-listing-btn");
  const confirmDeleteButton = document.getElementById("confirmDeleteListing");
  const deleteListingNameSpan = document.getElementById("deleteListingName");
  const modalCloseButtons = deleteListingModal.querySelectorAll(".modal-close");
  let listingIdToDelete = null;

  deleteListingButtons.forEach((button) => {
    button.addEventListener("click", () => {
      listingIdToDelete = button.dataset.id;
      const listingName = button.dataset.name;
      deleteListingNameSpan.textContent = listingName;
      deleteListingModal.classList.remove("hidden");
    });
  });

  modalCloseButtons.forEach((button) => {
    button.addEventListener("click", () => {
      deleteListingModal.classList.add("hidden");
      listingIdToDelete = null;
    });
  });

  confirmDeleteButton.addEventListener("click", async () => {
    if (!listingIdToDelete || confirmDeleteButton.disabled) return;
    
    const btnText = confirmDeleteButton.querySelector(".delete-btn-text");
    const btnLoader = confirmDeleteButton.querySelector(".delete-btn-loader");
    
    // Set loading state
    confirmDeleteButton.disabled = true;
    confirmDeleteButton.classList.add("opacity-50", "cursor-not-allowed");
    btnText.classList.add("hidden");
    btnLoader.classList.remove("hidden");
    
    try {
      const response = await fetch(`/listings/properties/delete/${listingIdToDelete}`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
      });
      const data = await response.json();
      if (data.status) {
        window.location.reload();
      } else {
        alert(data.message || "Error deleting listing");
        // Reset loading state on error
        confirmDeleteButton.disabled = false;
        confirmDeleteButton.classList.remove("opacity-50", "cursor-not-allowed");
        btnText.classList.remove("hidden");
        btnLoader.classList.add("hidden");
      }
    } catch (error) {
      console.error("Error:", error);
      alert("An error occurred while deleting the listing");
      // Reset loading state on error
      confirmDeleteButton.disabled = false;
      confirmDeleteButton.classList.remove("opacity-50", "cursor-not-allowed");
      btnText.classList.remove("hidden");
      btnLoader.classList.add("hidden");
    }
  });
</script>

<style>
  .modal-content {
    animation: modalSlideIn 0.3s ease-out;
  }
  @keyframes modalSlideIn {
    from { opacity: 0; transform: translateY(-20px) scale(0.95); }
    to { opacity: 1; transform: translateY(0) scale(1); }
  }
  .modal-backdrop {
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
  }
</style>
