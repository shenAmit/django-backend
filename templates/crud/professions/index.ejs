<div class="m-[17px]">
  <div
    class="p-4 bg-white block sm:flex items-center justify-between border-b border-gray-200 lg:mt-1.5 dark:bg-gray-800 dark:border-gray-700"
  >
    <div class="w-full mb-1">
      <div class="mb-4">
        <h1
          class="text-xl font-semibold text-gray-900 sm:text-2xl dark:text-white"
        >
          All Professions
        </h1>
      </div>
      <div class="sm:flex">
        <div
          class="items-center hidden mb-3 sm:flex sm:divide-x sm:divide-gray-100 sm:mb-0 dark:divide-gray-700"
        >
          <form class="lg:pr-3" method="GET">
            <label for="users-search" class="sr-only">Search</label>
            <div class="relative mt-1 lg:w-64 xl:w-96 flex gap-4">
              <input
                type="text"
                name="name"
                id="name"
                class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                placeholder="Search Profession"
                value="<%= search || '' %>"
              />
              <button
                class="text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
                type="submit"
              >
                Submit
              </button>
            </div>
          </form>
        </div>
        <% if (user?.permissions?.includes("profession_create")) { %>
        <div class="flex items-center ml-auto space-x-2 sm:space-x-3">
          <button
            id="addProfessionBtn"
            type="button"
            class="inline-flex items-center justify-center w-1/2 px-3 py-2 text-sm font-medium text-center text-white rounded-lg bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 sm:w-auto dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
          >
            <svg
              class="w-5 h-5 mr-2 -ml-1"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                fill-rule="evenodd"
                d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z"
                clip-rule="evenodd"
              ></path>
            </svg>
            Add Profession
          </button>
        </div>
        <% } %>
      </div>
    </div>
  </div>
  <div class="flex flex-col">
    <div class="overflow-x-auto">
      <div class="inline-block min-w-full align-middle">
        <div class="overflow-hidden shadow">
          <table
            class="min-w-full divide-y divide-gray-200 table-fixed dark:divide-gray-600"
          >
            <thead class="bg-gray-100 dark:bg-gray-700">
              <tr>
                <th
                  scope="col"
                  class="p-4 whitespace-nowrap text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400"
                >
                  S No.
                </th>
                <th
                  scope="col"
                  class="p-4 text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400"
                >
                  Icon
                </th>
                <th
                  scope="col"
                  class="p-4 text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400"
                >
                  Name
                </th>
                <th
                  scope="col"
                  class="p-4 text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400"
                >
                  Description
                </th>
                <th
                  scope="col"
                  class="p-4 text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400"
                >
                  Status
                </th>
                <th
                  scope="col"
                  class="p-4 text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400"
                >
                  Added At
                </th>
                <% if (user?.permissions?.includes("profession_edit") ||
                user?.permissions?.includes("profession_delete")) { %>

                <th
                  scope="col"
                  class="p-4 text-xs font-medium text-left text-gray-500 uppercase dark:text-gray-400"
                >
                  Actions
                </th>
                <% } %>
              </tr>
            </thead>
            <tbody
              class="bg-white divide-y divide-gray-200 dark:bg-gray-800 dark:divide-gray-700"
            >
              <% if (professions.length === 0) { %>
              <tr>
                <td
                  colspan="7"
                  class="p-4 text-center text-gray-500 dark:text-gray-400"
                >
                  No Profession found.
                </td>
              </tr>
              <% } else { %> <% for (let i = 0; i < professions.length; i++) { %> <%
              const profession = professions[i]; %>
              <tr class="hover:bg-gray-100 dark:hover:bg-gray-700">
                <td class="p-4 text-sm text-gray-900 dark:text-white">
                  <%= ((pagination.perPage * (pagination.currentPage - 1)) + i +
                  1) %>
                </td>
                <td class="p-4">
                  <% if (profession.iconUrl) { %>
                    <img 
                      src="<%= profession.iconUrl %>" 
                      alt="<%= profession.name %> icon" 
                      class="w-10 h-10 object-cover rounded-lg"
                      onerror="this.onerror=null; this.src='https://via.placeholder.com/40?text=No+Icon';"
                    />
                  <% } else { %>
                    <div class="w-10 h-10 bg-gray-200 dark:bg-gray-700 rounded-lg flex items-center justify-center">
                      <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                      </svg>
                    </div>
                  <% } %>
                </td>
                <td class="p-4 text-sm text-gray-900 dark:text-white">
                  <%= profession.name %>
                </td>
                <td class="p-4 text-sm text-gray-900 dark:text-white">
                  <%= profession.description || '-' %>
                </td>
                <td class="p-4 text-sm text-gray-900 dark:text-white">
                  <% if (profession.status) { %>
                    <span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">
                      Active
                    </span>
                  <% } else { %>
                    <span class="inline-flex items-center rounded-md bg-red-50 px-2 py-1 text-xs font-medium text-red-700 ring-1 ring-inset ring-red-600/20">
                      Inactive
                    </span>
                  <% } %>
                </td>
                <td class="p-4 text-sm text-gray-900 dark:text-white">
                  <%= profession.createdAt.toLocaleDateString('en-US', { year:
                  'numeric', month: '2-digit', day: '2-digit', }) %>
                </td>

                <td class="p-4">
                  <div class="flex items-center space-x-2">
                  <% if (user?.permissions?.includes("profession_edit")) { %>

                  <button
                    type="button"
                    class="edit-profession-btn text-blue-600 hover:text-blue-900 dark:text-blue-400 dark:hover:text-blue-300"
                    data-id="<%= profession._id %>"
                    data-name="<%= profession.name %>"
                    data-description="<%= profession.description || '' %>"
                    data-status="<%= profession.status %>"
                    data-icon="<%= profession.iconUrl || '' %>"
                    title="Edit Profession"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  </button>
                  <% } %> <% if (user?.permissions?.includes("profession_delete")) {
                  %>

                  <button
                    type="button"
                    class="delete-profession-btn text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300"
                    data-id="<%= profession._id %>"
                    data-name="<%= profession.name %>"
                    title="Delete Profession"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  </button>

                  <% } %>
                  </div>
                </td>
              </tr>
              <% } %> <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <%- include('../components/pagination', {
    pagination,
    search,
    query,
    queryString
  }) %>
  </div>
</div>

<!-- Profession Add/Edit Modal -->
<div id="professionModal" class="fixed inset-0 z-50 hidden overflow-y-auto">
  <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:block sm:p-0">
    <!-- Background overlay with blur effect -->
    <div class="fixed inset-0 transition-all duration-300 bg-gray-500 bg-opacity-75 backdrop-blur-sm modal-backdrop"></div>

    <!-- Modal panel -->
    <div class="inline-block w-full max-w-md p-6 my-8 overflow-hidden text-left align-middle transition-all transform bg-white shadow-xl rounded-lg dark:bg-gray-800 modal-content">
      <div class="flex items-center justify-between mb-4">
        <h3 id="professionModalTitle" class="text-lg font-medium text-gray-900 dark:text-white">
          Add Profession
        </h3>
        <button type="button" class="modal-close text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <form id="professionForm" enctype="multipart/form-data">
        <input type="hidden" id="professionId" name="id" value="">
        
        <div class="mb-4">
          <label for="professionName" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
            Profession Name <span class="text-red-500">*</span>
          </label>
          <input
            type="text"
            id="professionName"
            name="name"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
            placeholder="Enter profession name"
            required
          />
        </div>

        <div class="mb-4">
          <label for="professionDescription" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
            Description
          </label>
          <textarea
            id="professionDescription"
            name="description"
            rows="3"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
            placeholder="Enter profession description (optional)"
          ></textarea>
        </div>

        <div class="mb-4">
          <label for="professionIcon" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
            Icon
          </label>
          <input
            type="file"
            id="professionIcon"
            name="icon"
            accept="image/*"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-primary-50 file:text-primary-700 hover:file:bg-primary-100 dark:file:bg-gray-600 dark:file:text-gray-200"
          />
          <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Upload an icon for this profession (JPG, PNG, GIF, SVG)</p>
          <div id="iconPreview" class="mt-2 hidden">
            <img id="iconPreviewImg" src="" alt="Icon preview" class="w-16 h-16 object-cover rounded-lg border border-gray-300 dark:border-gray-600" />
          </div>
        </div>

        <div class="mb-6">
          <label for="professionStatus" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
            Status
          </label>
          <select
            id="professionStatus"
            name="status"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
          >
            <option value="true">Active</option>
            <option value="false">Inactive</option>
          </select>
        </div>

        <div class="flex justify-end space-x-3">
          <button
            type="button"
            class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-200 rounded-lg hover:bg-gray-300 dark:bg-gray-600 dark:text-gray-200 dark:hover:bg-gray-500 modal-close"
          >
            Cancel
          </button>
          <button
            type="submit"
            id="professionSubmitBtn"
            class="px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-lg hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
          >
            Submit
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<%- include('../components/deleteModal', {
  modalId: "deleteProfessionModal",
  itemType: "profession"
}) %>

<style>
  /* Modal animations and blur effects */
  #professionModal, #deleteProfessionModal {
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
  }
  
  .modal-content {
    animation: modalSlideIn 0.3s ease-out;
  }
  
  @keyframes modalSlideIn {
    from {
      opacity: 0;
      transform: translateY(-20px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }
  
  /* Enhanced backdrop blur */
  .modal-backdrop {
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
  }
</style>

